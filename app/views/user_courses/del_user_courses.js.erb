<% if @mes_fail.present? %>
  alertify.error('<%= @mes_fail %>');
<% else %>
  <% if params[:ids].present? %>
    <% if @ids_deny.present? %>
      <% @name = String.new %>
      <% @ids_deny.each do |x| %>
        <% @name << UserCourse.find(x).user.name << ", " %>
        alertify.info('Some user remove from course unsuccess: <%= @name %>');
      <% end %>
    <% end %>
    <% (params[:ids]-@ids_deny).each do |x| %>
      $('#user-added-<%= x %>').remove();
    <% end %>
    <% @users.each do |s| %>
      $('#user-adding').append('<%= j (render partial: "user_adding", locals: {user: s, course: Course.find(params[:course_id])}) %>');
    <% end %>
    alertify.success('<%= @mes_success %>');
  <% else %>
    alertify.log('<%= @mes_success %>');
  <% end %>
<% end %>
  $('#img-load').hide();
