<%= form_for @course, html: {style: "width: 100%;"}  do |f| %>
  <% select_owner_list %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Course Elements</h3>
    </div>
    <div class="box-body">
      <div class="col-md-6">
        <div class="form-group">
          <label class="control-label" for="val_coursename">Name
            <span class="text-danger">*</span>
          </label>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
          <span class="course-name-invalid error-message">
            <%= show_errors @course, :name, "name" %>
          </span>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, class: "form-control", placeholder: "Enter description" %>
        </div>
        <div class="form-group">
          <label class="control-label" for="val_coursename">Program
            <span class="text-danger">*</span>
          </label>
          <%= f.text_field :program, class: "form-control", placeholder: "Enter programe name" %>
          <span class="course-program-invalid error-message">
            <%= show_errors @course, :program, "program" %>
          </span>
        </div>
        <div class="form-group">
          <label class="control-label" for="val_coursename">Training Standard
            <span class="text-danger">*</span>
          </label>
          <%= f.text_field :training_standard, class: "form-control", placeholder: "Enter Standard" %>
          <span class="course-training_standard-invalid error-message">
            <%= show_errors @course, :training_standard, "training_standard" %>
          </span>
        </div>
        <div class="col-sm-6">(<strong class="text-red">*</strong>)Existing requirement</div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
        </div>
        <div class="form-group">
          <%= f.label :users_id, "Owner" %><br>
          <%= select "course", "users_id", @trainers.map {|trainer| [trainer.name,
            trainer.id]}, {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="control-label" for="val_coursename">Date Start
            <span class="text-danger">*</span>
          </label>
          <% if @course.date_start.nil? %>
            <%= f.text_field :date_start, "data-provide" => "datepicker", :value => Time.zone.today.strftime("%m/%d/%Y"), class: "form-control" %>
          <% else %>
            <% unless @course.init? %>
              <%= f.hidden_field :date_start, value: @course.date_start.strftime("%m/%d/%Y") %>
              <%= f.text_field :date_start, "data-provide" => "datepicker", :value => @course.date_start.strftime("%m/%d/%Y"), disabled: true, class: "form-control" %>
            <% else %>
              <%= f.text_field :date_start, "data-provide" => "datepicker", :value => @course.date_start.strftime("%m/%d/%Y"), class: "form-control" %>
            <% end %>
          <% end %>
          <span class="course-date_start-invalid error-message">
            <%= show_errors @course, :date_start, "date_start" %>
          </span>
        </div>
        <div class="form-group">
          <%= f.label :status %>
          <%= select "course", "status",
            Course.statuses.map {|name, index| [t("courses._status.#{name}"),
            name]}, {disabled: ['init', 'in_progress']}, class: "form-control" %>
        </div>
        <div class="form-group">
          <label>Avatar</label>
          <%= f.label :avatar do %>
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
          <% end %>
        </div>
        <div class="form-group">
          <label>Banner</label>
          <%= f.label :banner do %>
            <%= f.file_field :banner %>
            <%= f.hidden_field :banner_cache %>
          <% end %>
        </div>
        <div class="form-group">
          <% unless @course.finish? %>
          <%= f.submit yield(:button_text), class: "btn btn-primary", id: "submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
