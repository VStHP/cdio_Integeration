<% provide :title,  "Update Course" %>
<% provide :button_text, "Update" %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 style="text-align: center;">Update Course</h2>
    <h5 style="text-align: center;"><%= link_to "Show", @course %></h3>
    <%= render "form" %>
  </div>
</div>
<% if @all_subjects.present? %>
  <p>Subject</p>
  <%= form_for(@course.course_subjects.build) do %>
    <%= hidden_field_tag :course_id, @course.id %>
    <%= render partial: "subject_adding", collection: @all_subjects,
    as: :subject %>
    <button type="submit" class="btn btn-primary">Them Vao khoa hoc</button>
  <% end %>
<% end %>
