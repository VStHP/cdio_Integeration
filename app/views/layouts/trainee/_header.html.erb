<header class="main-header">

  <!-- Logo -->
  <a href="#" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>C</b>TS</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b style="color: #ec5151">CDIO</b>Training System</span>
  </a>

  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- Messages: style can be found in dropdown.less-->

        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag(current_user.avatar.url, class: "user-image") %>
            <!-- <img src="dist/img/user2-160x160.jpg" class="user-image" > -->
            <span class="hidden-xs"><%= current_user.name %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <!-- <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image"> -->
              <%= image_tag(current_user.avatar.url, class: "img-circle", alt: "User Image") %>
              <p>
                <%= current_user.name %>
                <small><%= current_user.program %></small>
                <% if current_user.date_start.present? %>
                  <small>Member since <%= month_name current_user.date_start.month %>, <%= current_user.date_start.year %></small>
                <% end %>
              </p>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", profile_path(current_user.id),
                  class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat"%>
              </div>
            </li>
          </ul>
        </li>
        <!-- Control Sidebar Toggle Button -->
        <li>
          <%= link_to "", edit_user_registration_path, class: "fa fa-gears" %>
        </li>
      </ul>
    </div>

  </nav>
</header>
