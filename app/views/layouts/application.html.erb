<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= favicon_link_tag "logo.png" %>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>

  <body class="hold-transition skin-blue sidebar-mini ">
    <div class="wrapper">
      <%= render "layouts/header" %>
      <%= render "layouts/asside" %>
      <div class="content-wrapper" style="min-height: 916px; padding-top: 50px;">
        <div class="clearfix">
          <script type="text/javascript">
            <% flash.each do |message_type, message| %>
              <% if message_type == "success" %>
                alertify.success('<%= message %>');
             <% elsif message_type == "danger" %>
                alertify.error('<%= message %>');
              <% else %>
                alertify.notice('<%= message %>');
              <% end %>
            <% end %>
          </script>
          <%= yield %>
        </div>
      </div>
      <img src="/assets/loading.gif" id="img-load"
        style="display:none;position: fixed;left: 44%;top: 35%;width: 200px;z-index: 2;"/ >
    </div>
  </body>
</html>
