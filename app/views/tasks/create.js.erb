<% if @task.errors.any? %>
  alertify.error('<%= escape_javascript(render :partial => "shared/error_messages", :locals => {:object => @task })%>');
<% else %>
  $('#new_task').remove();
  alertify.success('<%= @mes_success %>');
  $('#form-task').append('<%= j render(@task) %>');
  $('#task-add-id').show();
<% end %>
$('#img-load').hide();
