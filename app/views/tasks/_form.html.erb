<%= form_for @task, :html => {class: "new-section"}, remote: true do |f| %>
  <%= f.hidden_field :subject_id, :value => @subject.id %>
  <div>
    <div class="edit-field block">
      <div class="form-group">
        <%= f.label :name, t("clubs._form.name") %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div>
    <div class="edit-field block">
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group push-top-md edit-field block">
    <div class="row">
      <div class="col-sm-6"><%= t "clubs._form.require" %></div>
      <div class="col-sm-6 text-right">
        <button id="club_cancel" type="button" class="btn-cancel btn btn-default">
          Cancel
        </button>
        <%= f.submit "Add", class: "btn-save btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
