<div class="nested-fields row" style="padding-left: 10px;">
  <div class="col-xs-5">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="col-xs-6">
    <%= f.label :description %>
    <%= f.text_area :description, style: "max-width: 100%;", class: "form-control" %>
  </div>
  <div class="col-xs-1" style="padding-top: 30px;">
    <%= link_to_remove_association f do %>
      <i class="fa fa-trash-o" style="font-size: 23px;"></i>
    <% end %>
  </div>
</div>
