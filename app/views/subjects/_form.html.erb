<%= form_for @subject do |f| %>
  <%= render "shared/error_messages", object: @subject %>

  <%= f.label :name, "Subject name (*)" %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>

  <%= f.label :teacher, "Teacher" %>
  <%= f.text_field :teacher, class: "form-control" %>

  <%= f.label :time, "Number days (Max days to learn this subject) (*)" %>
  <%= f.number_field :time, class: "form-control", style: "width: 10%;" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary", id: "submit" %>
<% end %>

