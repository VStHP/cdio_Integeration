<div class="form-group nested-fields row">
  <div class="col-md-12">
    <%= f.label :name, "Detail link" %>
  </div>
  <div class="col-md-5">
    <%= f.text_field :name, class: "form-control", placeholder: "Enter detail" %>
  </div>
  <div class="col-md-6">
    <%= f.text_field :link, class: "form-control", placeholder: "Enter detail's link" %>
  </div>
  <div class="col-md-1" style="padding: 0px;">
      <%= link_to_remove_association f do %>
        <i class="fa fa-trash-o" style="font-size: 23px;"></i>
      <% end %>
    </div>
</div>
