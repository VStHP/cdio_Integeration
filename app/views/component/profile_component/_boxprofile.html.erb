<div class="box box-primary" id="profile-box" style="max-height: 543px;">
  <div id="profile-content">
    <% if can? :update, @user %>
      <%= link_to edit_profile_path(@user), class: "btn btn-sm btn-default form-btn-edit",
        remote: true do %>
        <i class="fa fa-cog"></i>
      <% end %>

    <% end %>
    <span id="action_block_<%= @user.id %>_2">
      <% if can? :block_user, @user %>
        <% if @user.active? %>
          <%= link_to block_user_path(id: @user.id, status: "block"), method: :patch,
            data: {confirm: "Are you sure to block this user?"}, remote: true,
            class: "btn btn-sm btn-default form-btn-trash" do %>
            <i class="fa fa-unlock"></i>
          <% end %>
        <% else %>
          <%= link_to block_user_path(id: @user.id, status: "active"), method: :patch,
            data: {confirm: "Are you sure to block this user?"}, remote: true,
            class: "btn btn-sm btn-default form-btn-trash" do %>
            <i class="fa fa-lock"></i>
          <% end %>
        <% end %>
      <% end %>
    </span>
    <div class="box-body">
      <p class="text-muted">
        <strong>Name :</strong> <%= @user.name %>
      </p>
      <hr>
      <p class="text-muted">
        <strong>Email :</strong> <%= @user.email %>
      </p>
      <hr>
      <p class="text-muted">
        <strong>Gender :</strong> <%= @user.gender %>
      </p>
      <hr>
      <p class="text-muted">
        <strong>University :</strong> <%= @user.university %>
      </p>
      <hr>
      <p class="text-muted">
        <strong>Program :</strong> <%= @user.program %>
      </p>
      <hr>
      <p class="text-muted">
        <strong>Type :</strong> <%= @user.suppervisor %>
      </p>
      <hr>
      <p class="text-muted">
        <strong>Date Start :</strong> <%= @user.date_start %>
      </p>
      <hr>
    </div>
  </div>
</div>
<style type="text/css">
  .form-btn-edit {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 10;
  }
  .form-btn-trash{
    position: absolute;
    right: 35px;
    top: 0;
    z-index: 10;
  }
</style>
