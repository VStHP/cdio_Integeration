<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">
      <% if @courses.size > 1 %>
        <% @show = "#{@courses.size} courses" %>
      <% else %>
        <% @show = "#{@courses.size} course" %>
      <% end %>
      Belongs to <%= @show %>
          </h3>
  </div>

  <div class="box-body">
    <% @courses.each do |item| %>
    <hr>
    <p class="text-muted">
      <%= link_to item.name, "#" %>
    </p>
    <% end %>
  </div>
</div>
